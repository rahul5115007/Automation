pipeline {
    agent any

    tools {
        maven 'Maven-3'
    }

    environment {
        MAVEN_OPTS = '-Dmaven.repo.local=.m2'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Source code checked out from GitHub'
            }
        }

        stage('Validate') {
            steps {
                bat 'mvn validate'
            }
        }
    }
}
